# Compose project identity (isolates containers/networks/volumes)
COMPOSE_PROJECT_NAME=meubolso_dev

# Exposed ports (host -> container)
FRONTEND_PORT=7657
POSTGRES_PORT=3737

# Images
POSTGRES_IMAGE=postgres:16
MINIO_IMAGE=minio/minio:latest
MINIO_MC_IMAGE=minio/mc:latest

# PostgreSQL (container)
POSTGRES_DB=meubolso_dev
POSTGRES_USER=meubolso_dev
POSTGRES_PASSWORD=change-me-dev-db-password
POSTGRES_HEALTHCHECK_INTERVAL=5s
POSTGRES_HEALTHCHECK_TIMEOUT=3s
POSTGRES_HEALTHCHECK_RETRIES=20

# Backend datasource (inside Docker network)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=meubolso_dev
DB_USER=meubolso_dev
DB_PASSWORD=change-me-dev-db-password
BACKEND_PORT_INTERNAL=4444

# CORS (add your LAN IP if needed)
APP_CORS_ALLOWED_ORIGINS=http://localhost:7657,http://127.0.0.1:7657

# JWT
JWT_SECRET=change-me-dev-jwt-secret-64-chars-minimum
JWT_ACCESS_TTL_MIN=15
JWT_REFRESH_TTL_DAYS=7

# MinIO (inside Docker network)
MINIO_PORT_INTERNAL=9000
MINIO_CONSOLE_PORT_INTERNAL=9001
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-dev-minio-password
MINIO_BUCKET=meubolso-dev-attachments
MINIO_SECURE=false

# Upload limits
APP_STORAGE_MAX_FILE_SIZE_BYTES=10485760
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB
